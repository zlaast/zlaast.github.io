---
import Base from '@layouts/Base.astro';
import PageSearch from '@components/Svelte/PageSearch.svelte';
---
<Base>
    <div class="flex mx-auto">
        <main class="mt-10 lg:mt-16 mb-24 pl-10 pr-3">
            <!-- Breadcrumbs -->
            <div class="mb-10 text-neutral-300 text-[20px]">
                <a class="hover:text-link decoration-dotted decoration-1 underline-offset-8 hover:underline font-medium" href="/">Home</a> /
                <a class="hover:text-link decoration-dotted decoration-1 underline-offset-8 hover:underline font-medium" href="/blog/search">Search</a>
            </div>
            <h1 class="font-readex bg-title text-bg my-16 max-w-fit p-3 text-6xl font-bold max-sm:text-center">Search</h1>
            <PageSearch client:only="svelte" />
        </main>
    </div>
</Base>

<style is:global>
    /* Note:
    * This CSS is to style the markdown content,
    * since this content is inaccessible to tailwind.
    * Some of the styling is based off the tailwind Typography plugin.
    */
    
    :root {
        --link: #cd9eec;
        --subtitle: #c2410c;
        --title: #979b8d;
    }
    
    html {
        scroll-behavior: smooth;
    }
</style>