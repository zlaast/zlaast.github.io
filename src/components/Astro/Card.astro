---
import { parseDate } from '@utils/utils'

const { post } = Astro.props
const date = parseDate(post.data.date)
---

<a
	class="my-5 max-w-[350px] text-neutral-50 max-md:rounded-md max-md:border-[1px] max-md:border-neutral-600 max-md:p-2"
	href=`/blog/${ post.slug }`
>
	<div class="mb-4 overflow-hidden rounded-xl max-md:hidden">
		<img
			class="duration-400 h-[200px] w-[320px] scale-125 object-cover transition-all hover:rotate-3 hover:scale-150"
			src={post.data.image}
		/>
	</div>
	<h2 class="text-xl font-bold text-subtitle">{post.data.subtitle}</h2>
	<h3 class="inline-block">{post.data.title}</h3>
	<span class="inline-block text-neutral-400">/</span>
	<span class="inline-block text-title">{date}</span>
	<div>
		{
			post.data.tags.sort().map((tag: any) => (
				<span class="text-sm leading-10">
					<span class="mr-1 whitespace-nowrap rounded-md border-[1px] border-slate-500 p-1">
						<span class="relative left-0.5 text-sm text-neutral-300">{tag}</span>
					</span>
				</span>
			))
		}
	</div>
</a>
