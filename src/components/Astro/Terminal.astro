---
const { command, result } = Astro.props;
---

<style>
    .container { display: inline-block; }

    .terminal-cursor {
        overflow: hidden;
        border-right: 10px solid;
        width: 100%;
        animation: cursor 1.2s step-end infinite alternate;
    }

    @keyframes cursor {
        50% { border-color: transparent }
    }
</style>

<div class="font-ubuntu my-5 bg-[#101010]">
    <div class="mb-5 select-none">
      <span class="relative top-2 mx-2 inline-block">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(255, 255, 255, 1);transform: ;msFilter:;">
          <path d="M12 14h6v2h-6zM6.293 9.707 8.586 12l-2.293 2.293 1.414 1.414L11.414 12 7.707 8.293z"></path>
          <path d="M20 4H4c-1.103 0-2 .897-2 2v12c0 1.103.897 2 2 2h16c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2zM4 18V6h16l.002 12H4z"></path>
        </svg>
      </span>
      <span class="border-x-[1px] border-b-2 border-t-[1px] border-x-slate-800 border-b-cyan-700 border-t-slate-800 p-2 px-4 font-semibold">user@linux:~</span>
      <span class="border-x-[1px] border-t-[1px] border-x-slate-800 border-t-slate-800 px-4 pb-2 pt-[1px] text-2xl">+</span>
      <span class="float-right">
        <svg class="mx-0.5 mt-2 inline-block" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" style="fill: rgb(220 38 38);transform: ;msFilter:;"><path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2z"></path></svg>
        <svg class="mx-0.5 mt-2 inline-block" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" style="fill: rgb(202 138 4);transform: ;msFilter:;"><path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2z"></path></svg>
        <svg class="mx-0.5 mr-2 mt-2 inline-block" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" style="fill: rgb(22 163 74);transform: ;msFilter:;"><path d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2z"></path></svg>
      </span>
    </div>
    <div class="container mb-3 text-lg">
      <span class="select-none pl-2.5 text-lime-500">user@linux:</span><span class="select-none text-cyan-700">~</span><span class="mr-2 select-none">$</span>
      <span>{ command }</span>
      <pre class="pl-2.5">{ result }</pre>
      <span class="select-none pl-2.5 text-lime-500">user@linux:</span><span class="select-none text-cyan-700">~</span><span class="mr-2 select-none">$</span>
      <span class="terminal-cursor">&nbsp;</span>
    </div>
  </div>

