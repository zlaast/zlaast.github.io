---
const { headings } = Astro.props;

let toc = '';
let lastHeading = 0;
headings.forEach((heading: any) => 
{
    switch(heading["depth"])
    {
        // h2
        case 2:
            if (lastHeading == 3 || lastHeading == 4)
                toc += '</ul>';

            lastHeading = 2;
            break;

        // h3
        case 3:
            if (lastHeading == 2)
                toc += '<ul class="toc-h3">';
            else if (lastHeading == 4)
                toc += '</ul>';

            lastHeading = 3;
            break;

        // h4
        case 4:
            if (lastHeading == 3)
                toc += '<ul class="toc-h4">';

            lastHeading = 4;
            break;
    }

    toc += `<li><a onclick="TocCategoryToggle(this)" href='#${heading["slug"]}'>${heading["text"]}</a></li>`;
})
---
<div id="sticky" class="pt-8 2xl:sticky 2xl:top-0 ml-10">
    <!-- Scroll Watcher -->
    <div class="mb-1 w-[100px] max-2xl:hidden">
      <span class="scroll-watcher inline-block h-0.5 opacity-45"></span>
      <span class="relative top-5 float-right inline-block">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" style="fill: #737373;transform: ;msFilter:;">
          <path d="M4 2v18H3v2h4v-2H6v-5h13a1 1 0 0 0 1-1V4a1 1 0 0 0-1-1H6V2H4zm4 3v2h2V5h2v2h2V5h2v2h2v2h-2v2h2v2h-2v-2h-2v2h-2v-2h-2v2H8v-2H6V9h2V7H6V5h2z"></path>
          <path d="M8 9h2v2H8zm4 0h2v2h-2zm-2-2h2v2h-2zm4 0h2v2h-2z"></path>
        </svg>
      </span>
    </div>
    <!-- Return to top -->
    <div id="toc" class="toc 2xl:pb-16">
      <a class="text-bg rounded-md bg-zinc-600 px-2 py-1 max-2xl:hidden" href="#top">
        <span class="mb-1 inline-block font-bold">Top</span>
        <span class="relative top-1.5 inline-block">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgb(18 19 23);;transform: ;msFilter:;"><path d="M6 18h12v2H6zm6-14.414-6.707 6.707 1.414 1.414L11 7.414V16h2V7.414l4.293 4.293 1.414-1.414z"></path></svg>
        </span>
      </a>
      <!-- Table of Contents -->
      <ul class="toc-h2 text-neutral-0 m-0 font-bold">
        <Fragment set:html={toc} />
      </ul>
    </div>
  </div>

<style is:global>
:root {
    --link: #cd9eec;
    --subtitle: #c2410c;
    --title: #979b8d;
    --h2: #e01a4f;
    --h3: #c2410c;
    --h4: #ca8a04;
}

.toc {
    -ms-overflow-style: none;
    line-height: 2.5rem;
    overflow-y: auto;
    scrollbar-width: none;
    width: max-content;
    width: 25ch;
    transition: max-height 0.15s;
}

.toc-h2
{
    color: var(--h2);
}

.toc-h2 li a:hover {
    border-bottom: 1px dotted var(--subtitle);
}

.toc-h3 {
    border-left: 1px dashed var(--h2);
    color: var(--h3);
    font-weight: 500;
    margin-left: 2px;
    overflow: hidden;
    padding-left: 1rem;
    transition: max-height 0.25s ease-in-out;
}

.toc-h3 li a:hover {
    border-bottom: 1px dotted #f1f5f9;
}

.toc-h4 {
    border-left: 1px dashed var(--h3);
    padding-left: 1rem;
    color: var(--h4);
    margin-left: 2px;
}

.toc::-webkit-scrollbar {
    display: none;
}

.scroll-watcher {
    top: 100px;
    max-width: 100px;
    animation: scroll-watcher linear;
    animation-timeline: scroll();
}

@keyframes scroll-watcher {
    from {
        background-color: red;
        width: 0px;
    }

    to {
        background-color: #00ffff;
        width: 76px;
    }
}
</style>