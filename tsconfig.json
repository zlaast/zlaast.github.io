{
	"extends": "astro/tsconfigs/strict",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@utils/*": ["src/utils/*"],
			"@layouts/*": ["src/pages/layouts/*"],
			"@pages/*": ["src/pages/*"],
			"@styles/*": ["src/pages/styles/*"],
			"@images/*": ["src/assets/images/*"]
		}
	}
}
